<h1>Exibindo Restaurante</h1>

<p>
	<b>Nome: </b>
	<%= @restaurante.nome %>
</p>

<p>
	<b>Endereço: </b>
	<%= @restaurante.endereco %>
</p>

<p>
	<b>Especialidade: </b>
	<%= @restaurante.especialidade %>
</p>
<p>
	<b>Nota Média: </b>
	<%= @restaurante.qualificacoes.average(:nota) %>
</p>
<p>
	<b>Qualificaçoes: </b>
	<%= @restaurante.qualificacoes.count %>
</p>
<p>
	<b>Preço Médio: </b>
	<%= @restaurante.qualificacoes.average(:valor_gasto)%>
</p>
<p>
	<%= comentarios @restaurante %>
	<%= novo_comentario @restaurante %>
</p>
<br>
<br>
<%= link_to 'Editar', action: 'edit', id: @restaurante %> | 
<%= link_to 'Voltar', action: 'index' %> | 
